/**app.wxss**/
@import './style/widget/weui.wxss';
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/*第一个公共的样式:右侧细线*/
.bdr{
  position: relative;
}
.bdr::after{
  content:"";
  width:1rpx;
  height:100%;
  position: absolute;
  right:0;
  top:0;
  background-color:#ccc;
}
/*第二个公共样式  通用灰色分割块*/
.divider{
  height:20rpx;  /*高度*/
  background:#f1f1f1;  /*灰色背景*/
  box-shadow:0 5rpx 5rpx rgba(0,0,0,.1) inset;
}
/*功能3：小拐角*/
.arrow{
   display:flex;
   justify-content: space-between;
   align-items: center;
}
.arrow::after{
   content:"";
   width:15rpx;  /*箭头正方形加边框*/
   height:15rpx;
   border-top:6rpx solid #ccc;
   border-right:6rpx solid #ccc;
   transform: rotate(45deg); 
}
/*功能4:打分*/
.shop-after{
  position: absolute;
  color:#e2e2e2;
  top:20rpx;
}
.shop-before{
  position: absolute;
  top:20rpx;
  right:30rpx;
  width:75%;
  color:#f4ea2a;
}
/*功能5:截取超过范围名称
商品名称过长  截取*/
.ell{
  overflow: hidden;  /*超出部分隐藏*/
  white-space:nowrap;  /*不允许换行*/
  text-overflow: ellipsis;  /*超出部分补充...*/
}
/*功能6*/
.loadmore {
  color: #888;
  font-size:16px;
  line-height: 100px;
  text-align: center;
}

.loadmore.loading::before {
  content: '';
  width: 40px;
  height: 40px;
  margin-top: -10px;
  margin-right: 10px;
  display: inline-block;
  vertical-align: middle;
  animation: loading 1s steps(12) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

@keyframes loading {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(-360deg);
  }
}
/*列的样式*/
.cell{
    background-color:#fff;
    font-size:16px;
}
.cell-item{
    border-bottom:1rpx solid #ddd;
    padding:20rpx 30rpx;
}

/*小细线*/
.line{
  border-top:3px solid #EEEEF3;
}